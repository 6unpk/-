<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="parkjunu.finder.com.viewer">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BookMarkList"
            android:label="@string/download"
            android:theme="@style/AppThemeActionBar" />
        <activity
            android:name=".TagAdder"
            android:label="@string/select_add_tag"
            android:theme="@style/TagAdder" />
        <activity
            android:name=".TagListActivity"
            android:label="@string/tag"
            android:theme="@style/AppThemeActionBar" />
        <activity
            android:name=".ContentViewer"
            android:label="@string/viewing"
            android:theme="@style/AppThemeActionBar" />
        <activity
            android:name=".PDFviewer"
            android:theme="@style/AppThemeActionBar" />
        <activity
            android:name=".SettingActivity"
            android:theme="@style/AppThemeActionBar"
            android:label="설정"/>
        <activity
            android:name=".PageMove"
            android:label="이동할 리스트(페이지) 번호"
            android:theme="@style/TagAdder" />
        <activity
            android:name=".OpenSourceLicense"
            android:theme="@style/AppThemeActionBar"/>
    </application>

</manifest>